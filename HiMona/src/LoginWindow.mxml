<?xml version="1.0" encoding="utf-8"?>

<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="500" height="100" title="Create of Join a Meeting">
	
	<mx:Form>
		<mx:HBox>
			<mx:Label id="message" text="Welcome to HiMona, please type a meeting name!" />
		</mx:HBox>
		<mx:HBox>
			<mx:FormItem label="Conversation Name:">
				<s:TextInput id="userInput" width="250"/>
			</mx:FormItem>
			<s:Button id="registerButton" label="REGISTER" styleName="buttonStyle"/>			
		</mx:HBox>
	</mx:Form>
</s:TitleWindow>
